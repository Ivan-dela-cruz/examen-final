<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_cat_gasto_home"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:adjustViewBounds="true"
                android:padding="4dp"
                android:scaleType="fitCenter"
               android:src="@drawable/gast5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:id="@+id/txt_describ_gasto_home"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Agua potable" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_valor_gasto_home"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="$50.00" />
                    <TextView
                        android:id="@+id/txt_fecha_item"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="2010/12/12" />
                </LinearLayout>

            </LinearLayout>




        </LinearLayout>


</RelativeLayout>