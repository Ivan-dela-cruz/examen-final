<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.PedidosActivity">

    <LinearLayout
        android:id="@+id/caja1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center|start"
            android:text="CÃ³digo pe"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_codigo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/caja2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/caja1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center|start"
            android:text="Detalle pe"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_detalle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/caja3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/caja2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center|start"
            android:text="Total pe"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_total"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/caja4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/caja3"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center|start"
            android:text="Tipo pe"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_tipo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number" />
    </LinearLayout>

    <Button

        android:id="@+id/btn_guardar"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/btn_actualizars"
        android:background="@color/colorPrimary"
        android:text="Guardar" />

    <Button

        android:id="@+id/btn_actualizars"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:text="Actualizar" />

</RelativeLayout>